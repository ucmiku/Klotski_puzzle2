+package watch;
+
+import java.io.IOException;
+import java.io.PrintWriter;
+import java.net.Socket;
+import java.util.List;
+import java.util.concurrent.CopyOnWriteArrayList;
+
+class GameSession {
+    private final String gameId;       // 游戏唯一ID
+    private Socket playerSocket;      // 玩家连接
+    private final List<Socket> spectators = new CopyOnWriteArrayList<>(); // 观战者列表
+    private String gameState;        // 当前游戏状态
+
+    public GameSession(String gameId) {
+        this.gameId = gameId;
+        this.gameState = "INITIAL_STATE";  // 初始化游戏状态
+    }
+
+    public synchronized void setPlayerSocket(Socket socket) {
+        this.playerSocket = socket;  // 设置玩家连接
+    }
+
+    public synchronized void addSpectator(Socket socket) {
+        spectators.add(socket);  // 添加观战者
+    }
+
+    public synchronized void handleMove(String moveData) {
+        // 这里应该解析moveData并更新游戏状态
+        // gameState = updateGameState(moveData);
+
+        broadcastToSpectators("GAME_STATE:" + gameState);  // 广播新状态
+    }
+
+    public synchronized String getGameState() {
+        return gameState;  // 获取当前状态
+    }
+
+    private void broadcastToSpectators(String message) {
+        // 遍历所有观战者并发送消息
+        for (Socket spectator : spectators) {
+            try {
+                PrintWriter out = new PrintWriter(spectator.getOutputStream(), true);
+                out.println(message);  // 发送状态更新
+            } catch (IOException e) {
+                System.err.println("向观战者广播失败: " + e.getMessage());
+                spectators.remove(spectator);  // 移除失效连接
+            }
+        }
+    }
+}
