+import java.net.Socket;
+import java.util.List;
+
+public class client {
+    private final Socket socket;  // 客户端套接字
+    private PrintWriter out;     // 输出流
+    private BufferedReader in;   // 输入流
+    private String clientType;   // 客户端类型："player"或"spectator"
+    private String gameId;       // 游戏ID
+
+    public client(Socket socket) {
+        this.socket = socket;  // 初始化客户端连接
+    }
+
+    @Override
+    public void run() {
+        try {
+            // 初始化输入输出流
+            out = new PrintWriter(socket.getOutputStream(), true);
+            in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
+
+            String inputLine;
+            while ((inputLine = in.readLine()) != null) {  // 读取客户端消息
+                System.out.println("收到消息: " + inputLine);
+
+                // 协议消息处理
+                if (inputLine.startsWith("REGISTER_PLAYER:")) {
+                    handlePlayerRegistration(inputLine.substring(16));  // 处理玩家注册
+                } else if (inputLine.startsWith("REGISTER_SPECTATOR:")) {
+                    handleSpectatorRegistration(inputLine.substring(18));  // 处理观战者注册
+                } else if (inputLine.startsWith("MOVE:")) {
+                    handleMove(inputLine.substring(5));  // 处理移动指令
+                } else if (inputLine.equals("LIST_GAMES")) {
+                    sendGameList();  // 发送游戏列表
+                }
+            }
+        } catch (IOException e) {
+            System.err.println("客户端连接错误: " + e.getMessage());
+        } finally {
+            try {
+                socket.close();  // 关闭连接
+            } catch (IOException e) {
+                e.printStackTrace();
+            }
+        }
+    }
+
+    private void handlePlayerRegistration(String gameId) {
+        this.clientType = "player";
+        this.gameId = gameId;
+
+        GameSession session = new GameSession(gameId);  // 创建新游戏会话
+        sever.addGameSession(gameId, session);     // 添加到活跃游戏列表
+        session.setPlayerSocket(socket);               // 设置玩家套接字
+        out.println("REGISTERED_AS_PLAYER:" + gameId); // 发送注册成功消息
+    }
+
+    private void handleSpectatorRegistration(String gameId) {
+        this.clientType = "spectator";
+        this.gameId = gameId;
+
+        GameSession session = sever.getGameSession(gameId);
+        if (session != null) {
+            session.addSpectator(socket);  // 添加观战者
